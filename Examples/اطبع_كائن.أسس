اشمل "مـتم/طـرفية.أسس"؛
اشمل "مـتم/نـص.أسس"؛
اشمل "مـحا"؛
مـحا.اشمل_ملف("Alusus/Json"، "جـيسون.أسس")؛

استخدم مـتم؛

دالة ابدا {
    عرف كائن: جـيسون = "{\n\t\"success\": true,\n\t\"time\": \"2020-01-14T17ZT\",\n\t\"hostname\": \"localhost\"\n}"

    طـرفية.اطبع("key: %s \t\t\t value: %s\n", كائن.المفاتيح(0).صوان, مـؤشر_محارف().{ إذا كائن(0) هذا = "true" وإلا هذا = "false" })؛
    طـرفية.اطبع("key: %s \t\t\t value: %s\n", كائن.المفاتيح(1).صوان, كائن(1)~مثل[نـص].صوان)
    طـرفية.اطبع("key: %s \t\t\t value: %s\n", كائن.المفاتيح(2).صوان, كائن(2)~مثل[نـص].صوان)
}
ابدا()؛
